<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erwanlbp.calculit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.GameActivity" />

        <activity
            android:name=".activity.AnswerActivity"
            android:parentActivityName="com.erwanlbp.calculit.activity.MainActivity"
            android:windowSoftInputMode="stateUnspecified" />

        <activity
            android:name=".activity.DifficultyActivity"
            android:parentActivityName="com.erwanlbp.calculit.activity.MainActivity" />

        <activity
            android:name=".activity.UserActivity"
            android:parentActivityName="com.erwanlbp.calculit.activity.MainActivity" />

        <activity
            android:name=".activity.HighscoresActivity"
            android:parentActivityName="com.erwanlbp.calculit.activity.MainActivity" />

    </application>

</manifest>